package Lecode.test;

import sun.awt.windows.WPrinterJob;

public class P367_有效的完全平方数 {
    public static void  main(String args[]){
        int num = 9;
        boolean res = isPerfectSquare(num);
        System.out.println(res);
    }
    public static boolean isPerfectSquare(int num) {
        if (num < 2) {
            return true;
        }

        long left = 2, right = num / 2, x, guessSquared;
        while (left <= right) {
            x = left + (right - left) / 2;
            guessSquared = x * x;
            if (guessSquared == num) {
                return true;
            }
            if (guessSquared > num) {
                right = x - 1;
            } else {
                left = x + 1;
            }
        }
        return false;
    }
}
